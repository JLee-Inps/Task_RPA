{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "downlevelIteration": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@/admin/*": ["admin/*"],
      "@/front/*": ["front/*"],
      "@/core/*": ["core/*"],
      "@/auth/*": ["core/auth/*"],
      "@/router/*": ["core/router/*"],
      "@/styles/*": ["core/styles/*"]
    }
  },
  "include": [
    "src",
    "src/core/styles/styled.d.ts"
  ]
}
